<Window x:Class="daily_dilbert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:daily_dilbert"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Daily Dilbert" Height="450" Width="900" Loaded="Window_Loaded" Icon="Bo-Dilbert-Dilbert.ico">        
    <Grid>
        <Image x:Name="comic" Margin="0,0,0,30" />
        <Button x:Name="setAsWallpaper" Height="30" VerticalAlignment="Bottom" Content="Save Comic Strip" Click="SaveComic_Click" />
    </Grid>
</Window>
